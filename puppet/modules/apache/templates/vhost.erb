<VirtualHost *:80>
	ServerName <%= @vhost_domain %>
	DocumentRoot <%= @vhost_root %>
	ErrorLog /var/www/logs/<%= @vhost_domain %>-error_log
	CustomLog /var/www/logs/<%= @vhost_domain %>-access_log common

	<Directory <%= @vhost_root %>>
		Allow from Allow
		Options +Includes +Indexes +FollowSymLinks
		AllowOverride all
	</Directory>
</VirtualHost> 